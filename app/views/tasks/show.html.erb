<div class="header">
  <h1><%= @task.title %></h1>
  <div class="button">
    <%= link_to "Edit this task", edit_task_path(@task.id) %>
  </div>
</div>

<div class="details">
  <p><%= @task.details %></p>
</div>

<div class="task">
  <div class="completed">
    <% if @task.completed %>
      <i class="fas fa-check"></i>
    <% end %>
  </div>
  <% if @task.completed %>
    <p>This task is completed</p>
  <% else %>
    <p>This task is not completed yet</p>
  <% end %>
</div>

<%= link_to "Back to all tasks", tasks_path %>
