
<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'text-input'%>
  <%= f.label :details %>
  <%= f.text_field :details, class: 'text-input'%>
  <% if @task.new_record? %>
  <% else %>
      <%= f.check_box :completed %>
      <%= f.label :completed %>
  <% end %>
  <%= f.submit class: 'button' %>
<% end %>
